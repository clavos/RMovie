{% extends 'base.html.twig' %}

{% block title %}Liste de tous les utilisateurs{% endblock %}

{% block body %}
    <div class="nav-wrapper">

        {% block menu %}
            <nav>
                <div class="nav-wrapper">
                    <a href="#" class="brand-logo">RMovies</a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li><a href="/movie">Films</a></li>
                        <li><a href="#">A regarder</a></li>
                        <li><a href="#">Ajouter des films</a></li>
                    </ul>
                </div>
            </nav>
        {% endblock %}
    </div>

    <h1>Liste de tous les utilisateurs</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Nom d'utilisateur</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>
                    <a href="{{ path('user_detail', {'id': user.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
